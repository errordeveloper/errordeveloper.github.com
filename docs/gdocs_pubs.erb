<% require 'yaml' %>

<% pubs = YAML::load(File.open('gdocs_pubs.yml', 'r')) ; %>

<% if pubs[0].has_key?(:head) %>
<%  head = pubs.shift         %>
<%  head = head[:head]        %>
<%= "# #{head[:title]} #{head[:author]}\n\n" %>
<% end %>

<% pubs.each do |p| %>
<%= "#{p[:year]}\t-\t#{p[:name]} (#{p[:desc]})\n [View][#{p[:view]}] [Download][#{p[:file]}]" %>
<% end %>
